<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.huanxiu.demosforanimation">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".animation.AnimationActivity"/>
        <activity android:name=".animation.TweenAnimationActivity"/>
        <activity android:name=".animation.FrameAnimationActivity"/>
        <activity android:name=".animation.PropertyAnimationActivity"/>
        <activity android:name=".animation.PathAnimationActivity"/>
        <activity android:name=".animation.PaintAnimationActivity"/>
        <activity android:name=".shadow.ShadowActivity"/>
        <activity android:name=".widget.WidgetActivity"/>
    </application>

</manifest>