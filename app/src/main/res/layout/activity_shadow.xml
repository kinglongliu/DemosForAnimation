<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/likewx"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="阴影-发光"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <cn.huanxiu.demosforanimation.shadow.customview.ShadowLayerView
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <cn.huanxiu.demosforanimation.shadow.customview.BlurMaskFilterView
        android:layout_width="wrap_content"
        android:layout_height="100dp" />
    
    <cn.huanxiu.demosforanimation.shadow.customview.BitmapShadowView
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

</LinearLayout>