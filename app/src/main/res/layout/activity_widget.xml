<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <cn.huanxiu.demosforanimation.widget.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/flag_03"
            style="@style/text_flag_01"
            android:text="第一个View" />

        <TextView
            android:background="@drawable/flag_03"
            style="@style/text_flag_01"
            android:text="第二个View" />

        <TextView
            style="@style/text_flag_01"
            android:background="@drawable/flag_03"
            android:text="第三个kdkdkdkal" />
    </cn.huanxiu.demosforanimation.widget.FlowLayout>

    <cn.huanxiu.demosforanimation.widget.ProgressBar
        android:id="@+id/progess_one"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <cn.huanxiu.demosforanimation.widget.ProgressBarTwo
        android:id="@+id/progress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        app:progress_text_color="@color/colorAccent"
        android:layout_height="50dp" />
</LinearLayout>